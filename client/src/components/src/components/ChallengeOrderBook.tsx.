import { useState, useEffect } from 'react';
import { supabase } from '../lib/supabase';

interface Challenge {
  id: string;
  event_id: string;
  creator_id: string;
  creator_username?: string;
  chosen_outcome: string;
  stake_amount: number;
  min_match_amount: number;
  status: string;
  created_at: string;
}

interface ChallengeOrderBookProps {
  eventId: string;
  eventOutcomes: string[];
  currentUserId?: string;
}

export default function ChallengeOrderBook({ 
  eventId, 
  eventOutcomes,
  currentUserId 
}: ChallengeOrderBookProps) {
  const [challenges, setChallenges] = useState<Challenge[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');
  const [matchingChallengeId, setMatchingChallengeId] = useState<string | null>(null);
  const [selectedOutcome, setSelectedOutcome] = useState<string | null>(null);

  // Fetch challenges
  useEffect(() => {
    fetchChallenges();

    // Set up real-time subscription
    const subscription = supabase
      .channel(`challenges_${eventId}`)
      .on(
        'postgres_changes',
        {
          event: '*',
          schema: 'public',
          table: 'challenges',
          filter: `event_id=eq.${eventId}`
        },
        () => {
          fetchChallenges();
        }
      )
      .subscribe();

    return () => {
      subscription.unsubscribe();
    };
  }, [eventId]);

  const fetchChallenges = async () => {
    try {
      setLoading(true);
      
      // Fetch challenges with creator profile info
      const { data, error: fetchError } = await supabase
        .from('challenges')
        .select(`
          *,
          profiles!challenges_creator_id_fkey (
            username
          )
        `)
        .eq('event_id', eventId)
        .eq('status', 'open')
        .order('created_at', { ascending: false });

      if (fetchError) throw fetchError;

      // Map data to include username
      const challengesWithUsername = data?.map(challenge => ({
        ...challenge,
        creator_username: challenge.profiles?.username || 'Anonymous'
      })) || [];

      setChallenges(challengesWithUsername);
    } catch (err: any) {
      console.error('Error fetching challenges:', err);
      setError('Failed to load challenges');
    } finally {
      setLoading(false);
    }
  };

  const handleMatchChallenge = async (challenge: Challenge, matchStake: number) => {
    try {
      setMatchingChallengeId(challenge.id);
      setError('');

      // Call the Supabase RPC function
      const { data, error: rpcError } = await supabase
        .rpc('match_challenge_v1', {
          p_challenge_id: challenge.id,
          p_matcher_stake: matchStake
        });

      if (rpcError) throw rpcError;

      // Success - refresh challenges
      await fetchChallenges();
      
      // Show success message
      alert(`Challenge matched! KSh ${(challenge.stake_amount + matchStake).toLocaleString()} locked in escrow.`);
      
    } catch (err: any) {
      console.error('Error matching challenge:', err);
      setError(err.message || 'Failed to match challenge');
    } finally {
      setMatchingChallengeId(null);
    }
  };

  const getOppositeOutcome = (chosenOutcome: string): string => {
    return eventOutcomes.find(outcome => outcome !== chosenOutcome) || '';
  };

  const formatTimeAgo = (timestamp: string): string => {
    const now = new Date();
    const created = new Date(timestamp);
    const diffMs = now.getTime() - created.getTime();
    const diffMins = Math.floor(diffMs / 60000);
    
    if (diffMins < 1) return 'Just now';
    if (diffMins < 60) return `${diffMins}m ago`;
    
    const diffHours = Math.floor(diffMins / 60);
    if (diffHours < 24) return `${diffHours}h ago`;
    
    const diffDays = Math.floor(diffHours / 24);
    return `${diffDays}d ago`;
  };

  // Group challenges by outcome
  const challengesByOutcome = eventOutcomes.reduce((acc, outcome) => {
    acc[outcome] = challenges.filter(c => c.chosen_outcome === outcome);
    return acc;
  }, {} as Record<string, Challenge[]>);

  if (loading) {
    return (
      <div className="flex items-center justify-center py-12">
        <div className="text-yellow-400 text-lg">Loading challenges...</div>
      </div>
    );
  }

  if (challenges.length === 0) {
    return (
      <div className="text-center py-12">
        <div className="text-6xl mb-4">ðŸŽ¯</div>
        <h3 className="text-xl font-bold text-white mb-2">No Open Challenges</h3>
        <p className="text-gray-400">Be the first to create a challenge!</p>
      </div>
    );
  }

  return (
    <div className="space-y-8">
      {error && (
        <div className="bg-red-500/10 border border-red-500 text-red-400 px-4 py-3 rounded-lg">
          {error}
        </div>
      )}

      {/* Filter/Sort Options */}
      <div className="flex gap-4 items-center">
        <div className="text-sm text-gray-400">
          {challenges.length} open {challenges.length === 1 ? 'challenge' : 'challenges'}
        </div>
        <div className="flex gap-2 ml-auto">
          <button
            onClick={() => setSelectedOutcome(null)}
            className={`px-4 py-2 rounded-lg text-sm font-semibold transition ${
              selectedOutcome === null
                ? 'bg-yellow-400 text-black'
                : 'bg-zinc-800 text-gray-400 hover:text-white'
            }`}
          >
            All
          </button>
          {eventOutcomes.map(outcome => (
            <button
              key={outcome}
              onClick={() => setSelectedOutcome(outcome)}
              className={`px-4 py-2 rounded-lg text-sm font-semibold transition ${
                selectedOutcome === outcome
                  ? 'bg-yellow-400 text-black'
                  : 'bg-zinc-800 text-gray-400 hover:text-white'
              }`}
            >
              {outcome}
            </button>
          ))}
        </div>
      </div>

      {/* Challenge List */}
      <div className="grid grid-cols-1 gap-4">
        {challenges
          .filter(c => selectedOutcome === null || c.chosen_outcome === selectedOutcome)
          .map((challenge) => (
            <ChallengeCard
              key={challenge.id}
              challenge={challenge}
              oppositeOutcome={getOppositeOutcome(challenge.chosen_outcome)}
              isOwnChallenge={challenge.creator_id === currentUserId}
              isMatching={matchingChallengeId === challenge.id}
              onMatch={handleMatchChallenge}
              formatTimeAgo={formatTimeAgo}
            />
          ))}
      </div>
    </div>
  );
}

// Separate Card Component for Cleaner Code
interface ChallengeCardProps {
  challenge: Challenge;
  oppositeOutcome: string;
  isOwnChallenge: boolean;
  isMatching: boolean;
  onMatch: (challenge: Challenge, stake: number) => void;
  formatTimeAgo: (timestamp: string) => string;
}

function ChallengeCard({
  challenge,
  oppositeOutcome,
  isOwnChallenge,
  isMatching,
  onMatch,
  formatTimeAgo
}: ChallengeCardProps) {
  const [customStake, setCustomStake] = useState(challenge.stake_amount);

  const handleMatch = () => {
    if (customStake < challenge.min_match_amount) {
      alert(`Minimum match amount is KSh ${challenge.min_match_amount.toLocaleString()}`);
      return;
    }
    onMatch(challenge, customStake);
  };

  return (
    <div className="bg-zinc-900 border border-zinc-800 rounded-xl p-6 hover:border-yellow-400/50 transition">
      <div className="flex items-start justify-between mb-4">
        <div className="flex items-center gap-3">
          <div className="w-10 h-10 rounded-full bg-gradient-to-br from-yellow-400 to-yellow-600 flex items-center justify-center text-black font-bold text-lg">
            {challenge.creator_username?.[0]?.toUpperCase() || '?'}
          </div>
          <div>
            <div className="font-semibold text-white">@{challenge.creator_username}</div>
            <div className="text-sm text-gray-400">{formatTimeAgo(challenge.created_at)}</div>
          </div>
        </div>
        
        {isOwnChallenge && (
          <div className="bg-yellow-400/20 text-yellow-400 px-3 py-1 rounded-full text-xs font-semibold">
            Your Challenge
          </div>
        )}
      </div>

      <div className="space-y-4">
        {/* Bet Details */}
        <div className="bg-black rounded-lg p-4 border border-zinc-800">
          <div className="text-sm text-gray-400 mb-1">Betting on</div>
          <div className="text-2xl font-bold text-yellow-400 mb-3">
            {challenge.chosen_outcome}
          </div>
          <div className="flex items-baseline gap-2">
            <span className="text-3xl font-bold text-white">
              KSh {challenge.stake_amount.toLocaleString()}
            </span>
            {challenge.min_match_amount < challenge.stake_amount && (
              <span className="text-sm text-gray-400">
                (min: KSh {challenge.min_match_amount.toLocaleString()})
              </span>
            )}
          </div>
        </div>

        {/* Match Section */}
        {!isOwnChallenge && (
          <div className="border-t border-zinc-800 pt-4">
            <div className="text-sm text-gray-400 mb-3">
              You'll be betting on: <span className="text-white font-semibold">{oppositeOutcome}</span>
            </div>

            <div className="space-y-3">
              <div>
                <label className="block text-sm text-gray-400 mb-2">
                  Your stake (min: KSh {challenge.min_match_amount.toLocaleString()})
                </label>
                <input
                  type="number"
                  value={customStake}
                  onChange={(e) => setCustomStake(Number(e.target.value))}
                  min={challenge.min_match_amount}
                  step={100}
                  className="w-full bg-black border border-zinc-800 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-yellow-400 transition"
                />
              </div>

              <div className="bg-zinc-800 rounded-lg p-3 text-sm">
                <div className="flex justify-between text-gray-400 mb-1">
                  <span>Total pot:</span>
                  <span className="text-white font-semibold">
                    KSh {(challenge.stake_amount + customStake).toLocaleString()}
                  </span>
                </div>
                <div className="flex justify-between text-gray-400 mb-1">
                  <span>Platform fee (3%):</span>
                  <span className="text-white">
                    KSh {((challenge.stake_amount + customStake) * 0.03).toLocaleString()}
                  </span>
                </div>
                <div className="flex justify-between text-yellow-400 font-bold pt-2 border-t border-zinc-700">
                  <span>If you win:</span>
                  <span>
                    KSh {((challenge.stake_amount + customStake) * 0.97).toLocaleString()}
                  </span>
                </div>
              </div>

              <button
                onClick={handleMatch}
                disabled={isMatching}
                className="w-full bg-gradient-to-r from-yellow-400 to-yellow-500 hover:from-yellow-500 hover:to-yellow-600 text-black font-bold py-4 rounded-lg transition disabled:opacity-50 disabled:cursor-not-allowed"
              >
                {isMatching ? 'Matching...' : 'Match This Challenge'}
              </button>
            </div>
          </div>
        )}

        {isOwnChallenge && (
          <div className="text-center py-4 text-gray-400 text-sm">
            Waiting for someone to match your challenge...
          </div>
        )}
      </div>
    </div>
  );
}
